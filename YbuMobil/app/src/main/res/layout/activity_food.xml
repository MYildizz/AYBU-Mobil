<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodActivity" android:background="@drawable/kulliyedeneme4">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="351dp"
            android:layout_height="284dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <RatingBar
            android:layout_width="243dp"
            android:layout_height="54dp"
            android:id="@+id/PersonalRating"
            style="@style/Widget.AppCompat.RatingBar"
            android:background="@android:drawable/editbox_dropdown_dark_frame"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"


            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.14"
            app:layout_constraintHorizontal_bias="0.546"/>

    />
    <TextView
            android:text="Genel Puan"
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:id="@+id/GeneralRating"
            android:background="@android:drawable/alert_dark_frame" android:textColor="@android:color/darker_gray"
            android:textSize="24sp" android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <RatingBar
            android:layout_width="187dp"
            android:layout_height="45dp"
            android:id="@+id/generalRating"
            android:background="@android:drawable/editbox_dropdown_dark_frame"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            app:layout_constraintTop_toBottomOf="@+id/GeneralRating" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Puan Ver"
            android:layout_width="250dp"
            android:layout_height="51dp"
            android:id="@+id/textView9" android:textSize="18sp"
            android:textColor="?attr/colorButtonNormal" android:background="@android:drawable/alert_dark_frame"
            android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/generalRating" app:layout_constraintHorizontal_bias="0.507"/>
    <Button
            android:text="SEND"
            android:layout_width="103dp"
            android:layout_height="49dp"
            android:id="@+id/sendRating"
            android:background="@android:drawable/alert_light_frame"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>

